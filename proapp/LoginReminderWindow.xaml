<Window x:Class="proapp.LoginReminderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proapp"
        mc:Ignorable="d"
        Title="LoginReminderWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Debes iniciar sesión" FontSize="16" Margin="10" HorizontalAlignment="Center"/>
            <Button Content="Iniciar Sesión" Width="100" Height="30" Margin="10" Click="OnLoginButtonClick"/>
        </StackPanel>
    </Grid>
</Window>
